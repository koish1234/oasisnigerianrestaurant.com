    <script>
        let cart = [];
        const cartPanel = document.getElementById('cart-panel');
        const cartCount = document.getElementById('cart-count');
        const cartItemsElem = document.getElementById('cart-items');
        const totalElem = document.getElementById('total');
        const upsell = document.getElementById('upsell');

        function toggleCart() { cartPanel.style.display = cartPanel.style.display === 'flex' ? 'none' : 'flex'; }

        function addToCart(name, price) {
            const existing = cart.find(item => item.name === name);
            if (existing) existing.quantity++;
            else cart.push({ name, price, quantity: 1 });
            updateCart();
        }

        function updateCart() {
            cartItemsElem.innerHTML = '';
            let total = 0;
            cart.forEach((item, i) => {
                const div = document.createElement('div');
                div.classList.add('cart-item');
                div.innerHTML = `
                    <span>${item.name} x ${item.quantity}</span>
                    <div class="quantity">
                        <div class="quantity-btn" onclick="changeQuantity(${i}, -1)">-</div>
                        <div class="quantity-btn" onclick="changeQuantity(${i}, 1)">+</div>
                    </div>
                    <span>KES ${item.price * item.quantity}</span>
                `;
                cartItemsElem.appendChild(div);
                total += item.price * item.quantity;
            });
            totalElem.textContent = `Total: KES ${total}`;
            cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0) || '0';
            upsell.style.display = cart.length ? 'block' : 'none';
        }

        function changeQuantity(i, delta) {
            cart[i].quantity += delta;
            if (cart[i].quantity <= 0) cart.splice(i, 1);
            updateCart();
        }

        function showVariants(name, variants) {
            document.getElementById('variant-popup').style.display = 'flex';
            document.getElementById('variant-title').textContent = name + ' Size';
            const options = document.getElementById('variant-options');
            options.innerHTML = '';
            variants.forEach(v => {
                const btn = document.createElement('div');
                btn.classList.add('variant-btn');
                btn.innerHTML = `<span>${v.size}</span><span>KES ${v.price}</span>`;
                btn.onclick = () => { addToCart(`${name} (${v.size})`, v.price); closeVariant(); };
                options.appendChild(btn);
            });
        }

        function closeVariant() { document.getElementById('variant-popup').style.display = 'none'; }

        function toggleLocation(show) { document.getElementById('location-field').style.display = show ? 'block' : 'none'; }

        function showCheckout() {
            if (cart.length === 0) return alert("Cart is empty! Add some food first.");
            document.getElementById('checkout-form').style.display = 'flex';
        }

        function closeCheckout() { document.getElementById('checkout-form').style.display = 'none'; }

        function getLocation() {
            navigator.geolocation.getCurrentPosition(pos => {
                document.getElementById('location').value = `Lat ${pos.coords.latitude.toFixed(4)}, Lon ${pos.coords.longitude.toFixed(4)}`;
            }, () => alert('Enable location or enter manually.'));
        }

        let orderCounter = parseInt(localStorage.getItem('orderCounter') || '0');
        function generateReceipt() {
            const name = document.getElementById('name').value.trim() || 'Guest';
            const rider = document.querySelector('input[name="rider"]:checked')?.value || 'no';
            const location = rider === 'yes' ? (document.getElementById('location').value.trim() || 'Not provided') : 'Pickup';
            closeCheckout();

            orderCounter++;
            localStorage.setItem('orderCounter', orderCounter);
            const nameCode = name.substring(0,3).toLowerCase() || 'gue';
            const orderNum = `oas-${nameCode}-${orderCounter.toString().padStart(3,'0')}`;

            let details = `Oasis Nigerian Restaurant Order\n`;
            details += `Date: ${new Date().toLocaleString('en-KE')}\n`;
            details += `Name: ${name}\n`;
            details += `Delivery: ${rider === 'yes' ? 'Yes (Oasis Rider)' : 'No (Pickup)'}\n`;
            details += `Location: ${location}\n\n`;
            details += `Items:\n`;
            let total = 0;
            if (cart.length === 0) {
                details += "(No items added yet)\n";
            } else {
                cart.forEach(item => {
                    const itemTotal = item.price * item.quantity;
                    details += `‚Ä¢ ${item.name} √ó ${item.quantity} = KES ${itemTotal}\n`;
                    total += itemTotal;
                });
            }
            details += `\nTotal Amount: KES ${total}\n`;
            details += `Order Number: ${orderNum}\n`;
            details += `Thank you for choosing Oasis! üç≤üá≥üá¨`;

            document.getElementById('receipt-details').textContent = details;
            document.getElementById('receipt').style.display = 'flex';

            JsBarcode("#barcode", orderNum, { format: "CODE128", lineColor: "#000", width: 1.8, height: 60, fontSize: 14 });
            QRCode.toCanvas(document.getElementById('qrcode'), details, { width: 140 }, function (error) {
                if (error) console.error(error);
            });

            const waText = encodeURIComponent(details);
            const waUrl = `https://wa.me/254740582858?text=${waText}`;
            const waLink = document.getElementById('wa-link');
            waLink.href = waUrl;
            waLink.onclick = function(e) {
                e.preventDefault();
                window.open(waUrl, '_blank');
            };

            cart = [];
            updateCart();
        }

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            doc.setFontSize(12);
            doc.text(document.getElementById('receipt-details').textContent, 10, 10, { maxWidth: 180 });
            doc.save('oasis-receipt.pdf');
        }
    </script>
</body>
</html>
